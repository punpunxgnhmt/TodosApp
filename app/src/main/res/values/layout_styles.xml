<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="TaskGroupLayout" parent="ClickableView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ItemTagLayout" parent="ClickableView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:backgroundTint">@color/primaryColorLight</item>
        <item name="cardCornerRadius">22dp</item>
        <item name="contentPaddingTop">4dp</item>
        <item name="contentPaddingBottom">4dp</item>
        <item name="contentPaddingRight">12dp</item>
        <item name="contentPaddingLeft">12dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="HorizontalLineDeviceTaskGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#EFEFEF</item>
        <item name="android:alpha">0.9</item>
    </style>
</resources>