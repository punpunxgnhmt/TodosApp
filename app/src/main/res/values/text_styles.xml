<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LogoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:text">@string/appName</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#010101</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/avenir_next_rounded_pro_demi</item>
    </style>

    <style name="OnBoardingTitle" parent="LogoTextStyle">
        <item name="android:layout_marginTop">12dp</item>
        <item name="lineHeight">28dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="OnBoardingMessage" parent="LogoTextStyle">
        <item name="android:layout_marginTop">12dp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#313131</item>
    </style>

    <style name="AuthDescriptions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleTaskGroup">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="DetailTaskGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/shape_rounded_background</item>
    </style>

    <style name="TitleItemMenu" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>