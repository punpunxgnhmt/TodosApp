<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="IconButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="OnBoardingButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#313131</item>
        <item name="elevation">10dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/avenir_next_rounded_pro_demi</item>
    </style>

    <style name="LoginButtonOnBoarding" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/avenir_next_rounded_pro_demi</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:focusable">false</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:paddingVertical" tools:targetApi="o">12dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LoginSocialButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_circle_white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="AuthNavigateButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:focusable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AddSubTaskButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:focusable">false</item>
        <item name="android:text">Thêm nhiệm vụ phụ</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="textAllCaps">false</item>
        <item name="icon">@drawable/ic_add</item>
        <item name="iconTint">@color/textColor</item>
        <item name="iconPadding">12dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>